<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context="com.example.trendingmovies.features.movie_details.MovieDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:elevation="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/moviePosterImageView"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/placeholder_loading">

            </androidx.appcompat.widget.AppCompatImageView>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movieTitletextView"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textSize="24sp"
            android:textColor="@color/teal_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            tools:text="Black Adam" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rateImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:tint="@color/teal_700"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/movieTitletextView"
            app:srcCompat="@drawable/ic_star_rate" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="8.3"
            app:layout_constraintBottom_toBottomOf="@+id/rateImageView"
            app:layout_constraintStart_toEndOf="@+id/rateImageView"
            app:layout_constraintTop_toTopOf="@+id/rateImageView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/durationTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/rateTextView"
            app:layout_constraintStart_toEndOf="@+id/rateTextView"
            app:layout_constraintTop_toTopOf="@+id/rateTextView"
            tools:text="114 min" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/genre1TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/rateImageView"
            tools:text="Action" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/genre2TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/genre1TextView"
            tools:text="Action" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/genre3TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/genre2TextView"
            tools:text="Action" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/calendarImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:tint="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/languageTextViewLabel"
            app:srcCompat="@drawable/ic_calendar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/releaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/calendarImageView"
            app:layout_constraintStart_toEndOf="@+id/calendarImageView"
            app:layout_constraintTop_toTopOf="@+id/calendarImageView"
            tools:text="14-12-2022" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/voteCountImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:tint="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarImageView"
            app:srcCompat="@drawable/ic_thumbs_up_down" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/votCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/voteCountImageView"
            app:layout_constraintStart_toEndOf="@+id/voteCountImageView"
            app:layout_constraintTop_toTopOf="@+id/voteCountImageView"
            tools:text="67000" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/statusImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:tint="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/voteCountImageView"
            app:srcCompat="@drawable/ic_check_circle" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/statusImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/statusImageView"
            app:layout_constraintTop_toTopOf="@+id/statusImageView"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Released" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/overviewTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:text="Nearly 5,000 years after he was bestowed with the almighty powers of the Egyptian gods—and imprisoned just as quickly—Black Adam is freed from his earthly tomb, ready to unleash his unique form of justice on the modern world." />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/languageTextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:tint="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overviewTextView"
            app:srcCompat="@drawable/ic_language" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/languageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/languageTextViewLabel"
            app:layout_constraintTop_toBottomOf="@+id/overviewTextView"
            tools:text="English" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/revenueTextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:tint="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusImageView"
            app:srcCompat="@drawable/ic_money" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/revenueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/revenueTextViewLabel"
            app:layout_constraintStart_toStartOf="@+id/languageTextView"
            app:layout_constraintTop_toTopOf="@+id/revenueTextViewLabel"
            tools:text="$500,0000" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/noInternet"
            layout="@layout/no_internet_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/dataViewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="revenueTextView, revenueTextViewLabel, languageTextView,
            languageTextViewLabel,overviewTextView, statusTextView, statusImageView, votCountTextView,
            voteCountImageView, releaseDateTextView, calendarImageView,genre3TextView, genre2TextView,
            genre1TextView, genre1TextView, durationTextview, rateTextView, rateImageView,
            movieTitletextView, cardView"
            tools:layout_editor_absoluteX="373dp"
            tools:layout_editor_absoluteY="523dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>